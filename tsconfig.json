{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@model/*": ["model/*"],
      "@HOC/*": ["HOC/*"],
      "@theme/*": ["theme/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
